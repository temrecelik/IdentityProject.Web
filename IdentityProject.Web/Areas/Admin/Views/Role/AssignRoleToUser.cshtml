
@{
    ViewData["Title"] = "AssignRoleToUser";
}

@model List<AssignRoleToUserViewModel>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4 class="text-center">Kullanıcıya rol atama</h4>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]

            </div>
        }
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-action="AssignRoleToUser" asp-route-UserId="@ViewBag.UserId" method="post">
            

            @for (int i= 0; i < Model.Count; i++){
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@Model[i].Exist">
					<label class="form-check-label" for="flexCheckDefault"> @Model[i].Name </label>               
                    <input  type="hidden" asp-for="@Model[i].Name">
                    <input  type="hidden" asp-for="@Model[i].Id">                 
                </div>
            }
			<div class="form-group mt-3">
				<input type="submit" value="Rol Ata" class="btn btn-success" />
			</div>
         
        </form>
    </div>
</div>

