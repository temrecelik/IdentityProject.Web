
@{
    ViewData["Title"] = "UserList";
}
@model List<UserViewModel>
<h1>UserList</h1>

<table class="table">
	<thead>
		<tr>

			<th scope="col">ID</th>
			<th scope="col">USER NAME</th>
			<th scope="col">EMAİL</th>
            <th scope="col"> Kullanıcı Rolleri</th>
            <th scope="col">Rol İşlemleri</th>
        </tr>
	</thead>


@foreach(var item in Model)
{   
        <tbody>
            <tr>             
                <td>@item.UserId</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td> 
                   <user-role-names user-id="@item.UserId"></user-role-names>

                </td>
                <td><a class="btn btn-outline-info" asp-area="admin" asp-controller="Role" asp-action="AssignRoleToUser"
                       asp-route-Id="@item.UserId">Rol Ata</a>
                </td>
            </tr>            
        </tbody>

}
</table>
